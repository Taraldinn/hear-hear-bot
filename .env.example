# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment type: development, production, testing
ENVIRONMENT=production

# =============================================================================
# PERFORMANCE TUNING (OPTIONAL)
# =============================================================================

# Maximum message cache (defaults to 1000)
MAX_MESSAGE_CACHE=1000

# Command timeout in seconds (defaults to 30)
COMMAND_TIMEOUT=30

# API rate limit per minute (defaults to 100)
API_RATE_LIMIT=100

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (true/false)
LOG_TO_FILE=true

# Enable log rotation (true/false)
LOG_ROTATION=true

# Maximum log file size
LOG_MAX_SIZE=10MB

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS (OPTIONAL)
# =============================================================================

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Maximum commands per user per minute
MAX_COMMANDS_PER_USER=10

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable web server (true/false)
ENABLE_WEB_SERVER=true

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Enable Tabbycat integration (true/false)
ENABLE_TABBYCAT=true

# Enable tournament features (true/false)
ENABLE_TOURNAMENT_FEATURES=true

