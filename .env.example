# =============================================================================
# HEAR! HEAR! BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control - it contains sensitive information

# =============================================================================
# REQUIRED SETTINGS
# =============================================================================

# Discord Bot Token (REQUIRED)
# Get this from: https://discord.com/developers/applications
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB Connection String (RECOMMENDED)
# Format: mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority
MONGODB_CONNECTION_STRING=your_mongodb_connection_string_here

# Database Names (optional - defaults provided)
DATABASE_NAME=hearhear-bot
TABBY_DATABASE_NAME=tabbybot

# Database Connection Settings (optional)
DATABASE_TIMEOUT=10
DATABASE_MAX_POOL_SIZE=100

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# Top.gg Token (OPTIONAL)
# For bot statistics on Top.gg
TOPGG_TOKEN=your_topgg_token_here

# Tabbycat API Key (OPTIONAL)
# For tournament integration features
TABBYCAT_API_KEY=your_tabbycat_api_key_here

# =============================================================================
# BOT CONFIGURATION
# =============================================================================

# Test Guild ID (OPTIONAL but RECOMMENDED for development)
# Commands will be instantly available in this server for testing
TEST_GUILD_ID=your_test_guild_id_here

# Shard Count (optional - defaults to 2)
SHARD_COUNT=2

# =============================================================================
# WEB SERVER CONFIGURATION
# =============================================================================

# Port for web server (defaults to 8080)
PORT=8080

# Host for web server (defaults to 0.0.0.0 for production)
HOST=0.0.0.0

# Debug mode (set to false for production)
DEBUG=false

# =============================================================================
# MOTIONS CONFIGURATION (OPTIONAL)
# =============================================================================

# Google Sheets CSV URLs for debate motions
# Option 1: Combined CSV with language column
MOTIONS_CSV_URL_COMBINED=your_combined_motions_csv_url_here

# Option 2: Separate CSVs per language
MOTIONS_CSV_URL_ENGLISH=your_english_motions_csv_url_here
MOTIONS_CSV_URL_BANGLA=your_bangla_motions_csv_url_here

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================

# Environment type: development, production, testing
ENVIRONMENT=production

# =============================================================================
# PERFORMANCE TUNING (OPTIONAL)
# =============================================================================

# Maximum message cache (defaults to 1000)
MAX_MESSAGE_CACHE=1000

# Command timeout in seconds (defaults to 30)
COMMAND_TIMEOUT=30

# API rate limit per minute (defaults to 100)
API_RATE_LIMIT=100

# =============================================================================
# LOGGING CONFIGURATION (OPTIONAL)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Enable file logging (true/false)
LOG_TO_FILE=true

# Enable log rotation (true/false)
LOG_ROTATION=true

# Maximum log file size
LOG_MAX_SIZE=10MB

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS (OPTIONAL)
# =============================================================================

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Maximum commands per user per minute
MAX_COMMANDS_PER_USER=10

# =============================================================================
# FEATURE FLAGS (OPTIONAL)
# =============================================================================

# Enable web server (true/false)
ENABLE_WEB_SERVER=true

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Enable Tabbycat integration (true/false)
ENABLE_TABBYCAT=true

# Enable tournament features (true/false)
ENABLE_TOURNAMENT_FEATURES=true

# =============================================================================
# EXAMPLE VALUES (FOR REFERENCE)
# =============================================================================

# Example Discord Bot Token format (replace XXXXX with actual values):
# DISCORD_BOT_TOKEN=XXXXXXXXXXXXXXXXXXXXXXXXX.XXXXXX.XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Example MongoDB Connection String format:
# MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster0.XXXXX.mongodb.net/mydatabase?retryWrites=true&w=majority

# Example Test Guild ID:
# TEST_GUILD_ID=123456789012345678

# Optional: Port for keep-alive server (default: 8080)
PORT=8080
