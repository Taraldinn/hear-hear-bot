                <a href="/docs" 
                   class="inline-flex h-12 items-center justify-center rounded-md border border-border bg-background px-8 text-base font-semibold hover:bg-accent hover:text-accent-foreground transition-colors">
                    <span class="mr-2">üìö</span>
                    View Documentation
                </a>
            </div>
        </div>
    </section>
    
    <!-- Features Section -->
    <section class="container mx-auto px-4 py-20">
        <div class="mx-auto max-w-5xl">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl mb-4">
                    Everything You Need
                </h2>
                <p class="text-lg text-muted-foreground">
                    Powerful features designed specifically for debate communities
                </p>
            </div>
            
            <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
                {% for feature in features %}
                <div class="rounded-lg border border-border bg-card p-6 card-hover">
                    <div class="mb-4 text-4xl">{{ feature.icon }}</div>
                    <h3 class="text-xl font-semibold mb-2">{{ feature.title }}</h3>
                    <p class="text-muted-foreground">{{ feature.description }}</p>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>
    
    <!-- Commands Preview -->
    <section class="container mx-auto px-4 py-20">
        <div class="mx-auto max-w-5xl">
            <div class="text-center mb-16">
                <h2 class="text-3xl font-bold tracking-tight sm:text-4xl md:text-5xl mb-4">
                    Powerful Commands
                </h2>
                <p class="text-lg text-muted-foreground">
                    Intuitive slash commands for every debate scenario
